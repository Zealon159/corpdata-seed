<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.corpdata.app.fruit.dao.FruitMapper">
	<resultMap id="BaseResultMap" type="com.corpdata.app.fruit.entity.Fruit">
        <id column="id" jdbcType="CHAR" property="id" />
        <result column="fruit_name" property="fruitName" />
        <result column="fruit_price" property="fruitPrice" />
        <result column="creater" property="creater" />
        <result column="created" property="created" />
    </resultMap>

  	<sql id="Base_Column_List" >
    	`id`,`fruit_name`,`fruit_price`,`creater`,`created`  	</sql>
  	
  	<insert id="insert" parameterType="com.corpdata.app.fruit.entity.Fruit">
		insert into fruit
		(
			`id`, 
			`fruit_name`, 
			`fruit_price`, 
			`creater`, 
			`created`
		)
		values
		(
			#{id}, 
			#{fruitName}, 
			#{fruitPrice}, 
			#{creater}, 
			#{created}
		)
	</insert>
	 
	<update id="update" parameterType="com.corpdata.app.fruit.entity.Fruit">
		update fruit 
		<set>
			<if test="fruitName != null">`fruit_name` = #{fruitName}, </if>
			<if test="fruitPrice != null">`fruit_price` = #{fruitPrice}, </if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="deleteById" parameterType="java.lang.String">
		delete from fruit where id = #{id}
	</delete>
	
	<delete id="deleteByIds">
		delete from fruit where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>
	
	<select id="selectById" parameterType="java.lang.String" resultMap="BaseResultMap">
		select <include refid="Base_Column_List" /> 
		from fruit where id = #{id}
	</select>
	
 	<select id="selectCount" resultType="int">
		select count(*) from fruit where 1=1
	</select>

	<select id="selectAll" parameterType="map" resultMap="BaseResultMap">
		select <include refid="Base_Column_List" />  from fruit
        where 1=1 
	</select>
	
	<select id="existsWithKeyName" resultType="int" parameterType="String">
		select 1 from fruit where 1=1 limit 0,1
	</select>
	
</mapper>